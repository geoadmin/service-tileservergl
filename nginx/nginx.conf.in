user nginx;

# should be equal to the number of process on the host machine
worker_processes 4;

events {
  worker_connections 10000;
  accept_mutex on;
}

http {
  include mime.types;
  default_type application/octet-stream;
  sendfile off;
  # this removes the "host_header" related issue
  underscores_in_headers on;

  server {
    listen 8134 default_server;

    location /maputnik {
      default_type "text/html";
      alias ${maputnik_root}/index.html;
    }
    location /maputnik/ {
      alias ${maputnik_root}/;
    }
    location /checker {
      access_log   off;
      add_header Content-Type text/plain;
      return 200 'OK';
    }
    location /health {
      proxy_pass                          http://localhost:8135/health;
    }
    location / {
      proxy_pass                          http://localhost:8135;
      proxy_set_header Host               $host;
      proxy_set_header X-Real-IP          $remote_addr;
      proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto  $scheme;
    }
  }
}
